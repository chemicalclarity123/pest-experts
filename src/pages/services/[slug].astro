                const colorClasses = colorCycle[index % 4];
                return (
                  <li class="flex items-start gap-4 group cursor-default">
                    <div class={`flex-shrink-0 w-12 h-12 rounded-xl bg-gradient-to-br shadow-sm border flex items-center justify-center mt-1 transition-all duration-300 ${colorClasses}`}>
