---
import Layout from '../../layouts/Layout.astro';
import LeadFormCompact from '../../components/LeadFormCompact.astro';
import Testimonials from '../../components/Testimonials.astro';
import FAQ from '../../components/FAQ.astro';
import WhyChooseUs from '../../components/WhyChooseUs.astro';
import WhatsAppWidget from '../../components/WhatsAppWidget.astro';
import { PortableText } from "astro-portabletext";
import { 
  fetchServices, 
  fetchServiceBySlug, 
  fetchCompanySettings, 
  fetchHomepage,
  urlFor 
} from '../../lib/sanity-client';
import { generateServiceSchema, generateFAQSchema } from '../../lib/schema';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const services = await fetchServices();
  return services.map((service: any) => ({
    params: { slug: service.slug },
  }));
}

const { slug } = Astro.params;
const service = await fetchServiceBySlug(slug as string);

const companySettings = await fetchCompanySettings();
const homepage = await fetchHomepage();

if (!service) {
  return Astro.redirect('/404');
}

// Fallback Logic
const testimonials = service.customTestimonials?.reviews?.length > 0 
  ? service.customTestimonials 
  : (companySettings?.testimonials?.reviews?.length > 0 ? companySettings.testimonials : homepage?.testimonials);

const faqs = service.localContext?.faqs?.length > 0
  ? service.localContext.faqs
  : homepage?.faq?.questions;

const faqTitle = service.localContext?.faqs?.length > 0
  ? "Common Questions"
  : homepage?.faq?.title;

const whatsappNumber = companySettings?.contactInfo?.whatsapp || "+27123456789";
  
// Schema Generation
const serviceSchema = generateServiceSchema({
  name: service.title,
  description: service.description,
  serviceType: service.localContext?.serviceType || "PestControl",
  provider: {
    name: companySettings?.businessName || "Built For Speed Pest Experts",
    url: import.meta.env.SITE || "https://pest-experts.co.za",
  },
  areaServed: service.localContext?.areas || companySettings?.serviceAreas || ["Pretoria", "Johannesburg"],
  knowsAbout: service.localContext?.pests,
  priceRange: service.pricing?.priceRange || "$$",
});

const faqSchema = faqs ? generateFAQSchema({ faqs }) : null;

// Combine Schemas
const schemaMarkup = [
    serviceSchema,
    ...(faqSchema ? [faqSchema] : [])
];

const heroImage = service.image?.asset 
  ? urlFor(service.image).width(1920).height(800).url() 
  : '/images/hero-bg.jpg';

// Get key features from Sanity
const keyFeatures = service.features || [];

// Breadcrumb Items
const breadcrumbItems = [
  { name: 'Home', item: Astro.site?.toString() || '/' },
  { name: 'Services', item: new URL('/services', Astro.site || 'https://pest-experts-site.pages.dev').href },
  { name: service.title, item: Astro.url.href }
];
---

<Layout 
  seo={service.seo}
  schemaMarkup={schemaMarkup}
>
  <!-- Hero Section with 2-Column Layout -->
  <section class="hero-section">
    <!-- Background Image Container -->
    <div class="hero-background">
      <img 
        src={heroImage} 
        alt={service.image?.alt || service.title}
        class="hero-image"
      />
      <div class="hero-overlay"></div>
    </div>

    <!-- Hero Content -->
    <div class="content-container hero-container">
      <div class="hero-grid">
        <!-- Left Column: Content -->
        <div class="hero-content">
          <!-- Breadcrumb for SEO -->
          <Breadcrumbs items={breadcrumbItems} />

          <h1 class="hero-title">{service.title}</h1>
          
          {service.hero?.subheading && (
            <p class="hero-subheading">{service.hero.subheading}</p>
          )}

          <!-- Key Features from Sanity -->
          {keyFeatures.length > 0 && (
            <ul class="key-features">
              {keyFeatures.map((feature: string) => (
                <li>
                  <svg class="check-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="3" d="M5 13l4 4L19 7" />
                  </svg>
                  <span>{feature}</span>
                </li>
              ))}
            </ul>
          )}

          <!-- Trust Badges -->
          <div class="trust-badges">
            <div class="badge">
              <svg class="badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
              <span>Licensed & Insured</span>
            </div>
            <div class="badge">
              <svg class="badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <span>Fast Response</span>
            </div>
            <div class="badge">
              <svg class="badge-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z" />
              </svg>
              <span>Guaranteed Results</span>
            </div>
          </div>

          <!-- CTA Buttons -->
          <div class="hero-cta-buttons">
            <a 
              href={"tel:" + (companySettings?.contactInfo?.telephone || "")}
              class="cta-primary"
            >
              <svg class="cta-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
              </svg>
              Call {companySettings?.contactInfo?.telephone}
            </a>
            <a 
              href="#lead-form" 
              class="cta-secondary"
            >
              Get Free Quote
            </a>
          </div>
        </div>

        <!-- Right Column: Lead Form -->
        <div class="hero-form" id="lead-form">
          <LeadFormCompact 
            title="Get a Free Inspection"
            description="Fast response across Gauteng"
            serviceTitle={service.title}
          />
          
          <!-- Quick Stats -->
          <div class="quick-stats">
            <div class="stat">
              <div class="stat-value">★ 4.8</div>
              <div class="stat-label">Google Rating</div>
            </div>
            <div class="stat">
              <div class="stat-value">10+</div>
              <div class="stat-label">Years Experience</div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Contenido principal del servicio desde Sanity (campo "Full Content") -->
  {service.content?.length > 0 && (
    <section class="full-content-section">
      <div class="content-container">
        <div class="full-content-body prose prose-lg">
          <PortableText value={service.content} />
        </div>
      </div>
    </section>
  )}

  <!-- Main Content -->
  <div class="content-container section-spacing">
    <!-- Overview -->
    {service.overview && (
      <section class="content-section overview-section">
        <h2 class="overview-heading">{service.overviewHeading || "Why Choose Professional Pest Control?"}</h2>
        <div class="prose prose-lg max-w-none">
          <PortableText value={service.overview} />
        </div>
      </section>
    )}

    <!-- Signs of Infestation -->
    {service.signsOfInfestation?.length > 0 && (
      <section class="content-section">
        <h2 class="section-title">
          <span class="title-icon">⚠️</span>
          Signs of Infestation
        </h2>
        <div class="signs-grid">
          {service.signsOfInfestation.map((sign: string) => (
            <div class="sign-card">
              <svg class="sign-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span>{sign}</span>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Treatment Process -->
    {service.treatmentProcess?.length > 0 && (
      <section class="content-section">
        <h2 class="section-title">Our Treatment Process</h2>
        <div class="process-timeline">
          {service.treatmentProcess.map((step: any, index: number) => (
            <div class="process-step">
              <div class="step-number">{index + 1}</div>
              <div class="step-content">
                <h3 class="step-title">{step.stepTitle}</h3>
                <p class="step-description">{step.stepDescription}</p>
              </div>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Benefits -->
    {service.benefits?.length > 0 && (
      <section class="content-section benefits-section">
        <h2 class="section-title">Why Professional Treatment?</h2>
        <div class="prose prose-lg max-w-none">
          <PortableText value={service.benefits} />
        </div>
      </section>
    )}
  </div>

  <!-- Why Choose Us -->
  <WhyChooseUs 
    title={homepage?.whyChooseUs?.title} 
    features={homepage?.whyChooseUs?.features} 
  />

  <!-- FAQ Section -->
  {faqs && (
    <div class="faq-section">
      <div class="content-container">
        <FAQ 
          title={faqTitle}
          questions={faqs}
        />
      </div>
    </div>
  )}

  <!-- Testimonials -->
  {testimonials && (
    <Testimonials 
      title={testimonials.title || "Success Stories"}
      reviews={testimonials.reviews}
      googleReviews={companySettings?.googleReviews}
    />
  )}

  <WhatsAppWidget 
    phoneNumber={whatsappNumber}
    message={`Hi! I'd like to get a quote for ${service.title}.`}
  />

  <Footer slot="footer" />
</Layout>

<style>
  /* Hero Section */
  .hero-section {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    padding: 6rem 0;
    overflow: hidden;
  }

  /* Sección de contenido completo — aparece justo después del hero */
