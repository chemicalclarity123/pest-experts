    <!-- Signs of Infestation -->
    {service.signsOfInfestation?.length > 0 && (
      <section class="content-section max-w-4xl mx-auto">
        <h2 class="section-title">
          <span class="title-icon">‚ö†Ô∏è</span>
          Signs of Infestation
        </h2>
        <div class="signs-grid">
          {service.signsOfInfestation.map((sign: string) => (
            <div class="sign-card">
              <svg class="sign-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
              </svg>
              <span>{sign}</span>
            </div>
          ))}
        </div>
      </section>
    )}

    <!-- Treatment Process -->
