    <!-- Overview -->
    {service.overview && (
      <section class="content-section overview-section">
        <div class="bg-white p-8 md:p-12 rounded-2xl shadow-sm border border-gray-100 max-w-4xl mx-auto relative overflow-hidden">
          <h2 class="section-heading mt-0 mb-6 text-left">
