---
import Layout from '../../layouts/Layout.astro';
import LeadFormCompact from '../../components/LeadFormCompact.astro';
import Testimonials from '../../components/Testimonials.astro';
import FAQ from '../../components/FAQ.astro';
import WhyChooseUs from '../../components/WhyChooseUs.astro';
import WhatsAppWidget from '../../components/WhatsAppWidget.astro';
import SeoSnippetBox from '../../components/SeoSnippetBox.astro';
import { PortableText } from "astro-portabletext";
import { 
  fetchServices, 
  fetchServiceBySlug, 
  fetchCompanySettings, 
  fetchHomepage,
  urlFor 
} from '../../lib/sanity-client';
import { generateServiceSchema, generateFAQSchema } from '../../lib/schema';
import Footer from '../../components/Footer.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';

export async function getStaticPaths() {
  const services = await fetchServices();
  return services.map((service: any) => ({
    params: { slug: service.slug },
  }));
}

const { slug } = Astro.params;
const service = await fetchServiceBySlug(slug as string);

// Lanza queries independientes en paralelo para reducir TTFB
const [companySettings, homepage] = await Promise.all([
  fetchCompanySettings(),
  fetchHomepage(),
]);

if (!service) {
  return Astro.redirect('/404');
}

// Fallback Logic
const testimonials = service.customTestimonials?.reviews?.length > 0 
  ? service.customTestimonials 
  : (companySettings?.testimonials?.reviews?.length > 0 ? companySettings.testimonials : homepage?.testimonials);

const faqs = service.localContext?.faqs?.length > 0
  ? service.localContext.faqs
  : homepage?.faq?.questions;

const faqTitle = service.localContext?.faqs?.length > 0
  ? "Common Questions"
  : homepage?.faq?.title;

const whatsappNumber = companySettings?.contactInfo?.whatsapp || "+27123456789";

// Imagen hero responsiva para optimizar LCP
const isSanityImage = service.image && service.image.asset;

const heroImageDesktop = isSanityImage
  ? urlFor(service.image).width(1440).height(600).quality(65).auto('format').url()
  : '/images/hero-bg.jpg';

const heroImageMobile = isSanityImage
  ? urlFor(service.image).width(640).height(400).quality(50).auto('format').url()
  : '/images/hero-bg.jpg';
  
// Schema Generation ‚Äî incluye imagen y URL para rich results en Google
const serviceSchema = generateServiceSchema({
  name: service.title,
  description: service.description,
  serviceType: service.localContext?.serviceType || "PestControl",
  image: heroImageDesktop,
  url: Astro.url.href,
  provider: {
    name: companySettings?.businessName || "Built For Speed Pest Experts",
    url: import.meta.env.SITE || "https://pestexperts.co.za",
  },
  areaServed: service.localContext?.areas || companySettings?.serviceAreas || ["Pretoria", "Johannesburg"],
  knowsAbout: service.localContext?.pests,
  priceRange: service.pricing?.priceRange || "$$",
});

const faqSchema = faqs ? generateFAQSchema({ faqs }) : null;

// Combine Schemas
const schemaMarkup = [
    serviceSchema,
    ...(faqSchema ? [faqSchema] : [])
];

// Get key features from Sanity
const keyFeatures = service.features || [];

/* Genera un heading SEO din√°mico para la secci√≥n de contenido completo */
const fullContentHeading = `Professional ${service.title} in Gauteng`;

// Breadcrumb Items
const breadcrumbItems = [
  { name: 'Home', item: Astro.site?.toString() || '/' },
  { name: 'Services', item: new URL('/services', Astro.site || 'https://pest-experts-site.pages.dev').href },
  { name: service.title, item: Astro.url.href }
];
---

<Layout 
  seo={service.seo}
  schemaMarkup={schemaMarkup}
>
  <Fragment slot="preload">
    <link rel="preload" href={heroImageMobile} as="image" fetchpriority="high" media="(max-width: 767px)" />
    <link rel="preload" href={heroImageDesktop} as="image" fetchpriority="high" media="(min-width: 768px)" />
  </Fragment>

  <!-- Hero Section with 2-Column Layout -->
  <section class="hero-section">
    <!-- Background Image Container -->
    <div class="hero-background">
      <picture>
        <source media="(min-width: 768px)" srcset={heroImageDesktop} />
        <img 
          src={heroImageMobile} 
          alt={service.image?.alt || service.title}
          class="hero-image"
          width="1440"
          height="600"
          fetchpriority="high"
          decoding="sync"
        />
      </picture>
      <div class="hero-overlay"></div>
    </div>

    <!-- Hero Content -->
    <div class="content-container hero-container">
      <div class="hero-grid">
