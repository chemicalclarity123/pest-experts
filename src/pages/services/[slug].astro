    padding: 3rem 0;
    background: #f9fafb;
    border-bottom: 1px solid #e5e7eb;
  }

  .full-content-body {
    max-width: 800px;
    margin: 0 auto;
  }

  .full-content-body h2 {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .full-content-body h2:first-child {
    margin-top: 0;
  }

  .full-content-body h3 {
    font-size: 1.35rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .full-content-body p {
    color: #4b5563;
    line-height: 1.8;
    margin-bottom: 1.25rem;
    font-size: 1.05rem;
  }

  .full-content-body ul,
  .full-content-body ol {
    padding-left: 1.5rem;
    margin-bottom: 1.25rem;
  }

  .full-content-body li {
    color: #4b5563;
    line-height: 1.7;
    margin-bottom: 0.5rem;
  }

  .full-content-body blockquote {
    border-left: 4px solid #2b6b2a;
    padding: 1rem 1.5rem;
    margin: 1.5rem 0;
    background: #f0fdf4;
    border-radius: 0 8px 8px 0;
    font-style: italic;
    color: #374151;
  }

  .hero-background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(43, 107, 42, 0.1) 0%, rgba(43, 107, 42, 0.1) 50%, rgba(43, 107, 42, 0.1) 100%);
  }

  .hero-container {
    position: relative;
    z-index: 10;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
    align-items: start;
  }

  @media (min-width: 1024px) {
    .hero-grid {
      grid-template-columns: 1.2fr 0.8fr;
      gap: 4rem;
    }
  }

  /* Breadcrumb */
  .breadcrumb {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: rgba(255, 255, 255, 0.9);
    margin-bottom: 1.5rem;
  }

  .breadcrumb a {
    color: rgba(255, 255, 255, 0.9);
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumb a:hover {
    color: white;
    text-decoration: underline;
  }

  .breadcrumb span:last-child {
    color: white;
    font-weight: 600;
  }

  /* Hero Content */
  .hero-content {
    color: white;
    background: rgba(0, 0, 0, 0.5);
    padding: 2.5rem;
    border-radius: 16px;
    backdrop-filter: blur(10px);
  }

  .hero-title {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.1;
    margin-bottom: 1rem;
    color: white;
  }

  @media (min-width: 768px) {
    .hero-title {
      font-size: 3.5rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-title {
      font-size: 4rem;
    }
  }

  .hero-subheading {
    font-size: 1.25rem;
    line-height: 1.6;
    color: rgba(255, 255, 255, 0.95);
    margin-bottom: 2rem;
  }

  /* Key Features */
  .key-features {
    list-style: none;
    padding: 0;
    margin: 0 0 2rem 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .key-features li {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 1.125rem;
    font-weight: 500;
    color: white;
  }

  .check-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: #fbbf24;
  }

  /* Trust Badges */
  .trust-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .badge {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.95);
  }

  .badge-icon {
    width: 20px;
    height: 20px;
    color: #fbbf24;
  }

  /* CTA Buttons */
  .hero-cta-buttons {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .cta-primary,
  .cta-secondary {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    padding: 1rem 2rem;
    border-radius: 12px;
    font-weight: 700;
    font-size: 1.125rem;
    text-decoration: none;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .cta-primary {
    background: white;
    color: #2b6b2a;
  }

  .cta-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.2);
  }

  .cta-secondary {
    background: rgba(255, 255, 255, 0.1);
    color: white;
    border: 2px solid white;
    backdrop-filter: blur(10px);
  }

  .cta-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
  }

  .cta-icon {
    width: 20px;
    height: 20px;
  }

  /* Hero Form */
  .hero-form {
    position: sticky;
    top: 2rem;
  }

  .quick-stats {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    margin-top: 1.5rem;
  }

  .stat {
    background: white;
    padding: 1rem;
    border-radius: 12px;
    text-align: center;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .stat-value {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-bottom: 0.25rem;
  }

  .stat-label {
    font-size: 0.75rem;
    color: #6b7280;
    font-weight: 600;
  }

  /* Content Sections */
  .content-section {
    margin-bottom: 4rem;
  }

  .section-title {
    font-size: 2rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-bottom: 2rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .title-icon {
    font-size: 2rem;
  }

  /* Signs Grid */
  .signs-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 768px) {
    .signs-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  .sign-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 1px 3px 0 rgba(0, 0, 0, 0.1);
    border: 1px solid #e5e7eb;
    display: flex;
    align-items: start;
    gap: 1rem;
    transition: all 0.2s;
  }

  .sign-card:hover {
    border-color: #2b6b2a;
    box-shadow: 0 10px 15px -3px rgba(43, 107, 42, 0.1);
    transform: translateY(-2px);
  }

  .sign-icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    color: #f97316;
    margin-top: 0.125rem;
  }

  .sign-card span {
    color: #374151;
    font-weight: 500;
  }

  /* Process Timeline */
  .process-timeline {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    position: relative;
  }

  .process-timeline::before {
    content: '';
    position: absolute;
    left: 23px;
    top: 40px;
    bottom: 40px;
    width: 2px;
    background: #dcfce7;
  }

  @media (max-width: 767px) {
    .process-timeline::before {
      left: 19px;
    }
  }

  .process-step {
    display: flex;
    gap: 2rem;
    position: relative;
  }

  .step-number {
    width: 48px;
    height: 48px;
    flex-shrink: 0;
    background: #2b6b2a;
    color: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.25rem;
    font-weight: 700;
    box-shadow: 0 0 0 4px white;
    position: relative;
    z-index: 10;
  }

  .step-content {
    flex: 1;
    background: #f9fafb;
    padding: 1.5rem;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    transition: all 0.2s;
  }

  .step-content:hover {
    border-color: #2b6b2a;
    background: white;
  }

  .step-title {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-bottom: 0.5rem;
  }

  .step-description {
    color: #6b7280;
    line-height: 1.6;
  }

  /* Benefits Section */
  .benefits-section {
    background: #f0fdf4;
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid #dcfce7;
  }

  /* FAQ Section */
  .faq-section {
    background: #f9fafb;
    padding: 4rem 0;
  }

  @media (min-width: 1024px) {
    .faq-section {
      padding: 6rem 0;
    }
  }

  /* Responsive adjustments */
  @media (max-width: 1023px) {
    .hero-section {
      min-height: auto;
      padding: 4rem 0;
    }

    .hero-form {
      position: static;
    }
  }

  @media (max-width: 640px) {
    .hero-title {
      font-size: 2rem;
    }

    .hero-subheading {
      font-size: 1.125rem;
    }

    .key-features li {
      font-size: 1rem;
    }

    .trust-badges {
      gap: 1rem;
    }

    .badge {
      font-size: 0.8125rem;
    }

    .cta-primary,
    .cta-secondary {
      width: 100%;
      justify-content: center;
      padding: 0.875rem 1.5rem;
      font-size: 1rem;
    }

    .section-title {
      font-size: 1.5rem;
    }

    .step-number {
      width: 40px;
      height: 40px;
      font-size: 1.125rem;
    }
  }

  /* Prose styling for PortableText */
  .prose {
    color: #374151;
    line-height: 1.75;
  }

  .prose p {
    margin-bottom: 1.25rem;
  }

  .prose h3 {
    font-size: 1.5rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }

  .prose ul {
    list-style-type: disc;
    padding-left: 1.625rem;
    margin-bottom: 1.25rem;
  }

  .prose li {
    margin-bottom: 0.5rem;
  }

  .prose strong {
    font-weight: 600;
    color: #1f2937;
  }

  /* Overview Section Styling */
  .overview-section {
    background: white;
    padding: 2.5rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
  }

  .overview-heading {
    font-size: 1.75rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-bottom: 1.5rem;
    text-align: center;
  }

  /* Increase font size for overview text to make it stand out */
  .overview-section .prose {
    font-size: 1.125rem;
    line-height: 1.8;
    color: #4b5563;
  }
</style>
