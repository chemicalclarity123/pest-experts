---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import LeadForm from '../components/LeadForm.astro';
import Footer from '../components/Footer.astro';
import WhatsAppWidget from '../components/WhatsAppWidget.astro';
import Testimonials from '../components/Testimonials.astro';
import { fetchCompanySettings, fetchHomepage, fetchContactPage, urlFor } from '../lib/sanity-client';

// Fetch data
const [companySettings, homepage, contactData] = await Promise.all([
  fetchCompanySettings(),
  fetchHomepage(),
  fetchContactPage()
]);

// Fallback data
const businessName = companySettings?.businessName || "Pest Experts";
const phone = companySettings?.contactInfo?.telephone || "+27 12 345 6789";
const email = companySettings?.contactInfo?.email || "info@pestexperts.co.za";
const address = companySettings?.address;
const hours = companySettings?.businessHours || [];
const whatsapp = companySettings?.contactInfo?.whatsapp;

// SEO & Schema from Sanity
const seoData = contactData?.seo || {
  metaTitle: `Contact Us | ${businessName}`,
  metaDescription: "Get in touch with Pest Experts for fast, reliable pest control services across Gauteng. Call us or request a free quote online."
};

// Map Image from Homepage
const mapImage = homepage?.serviceAreas?.mapImage;

// Check if mapImage is valid (supporting Sanity object or string)
const hasMapImage = mapImage && (
  (typeof mapImage === 'string' && mapImage.length > 0) ||
  (typeof mapImage === 'object' && mapImage.asset)
);

// Optimize image URL if it's a Sanity object
const mapImageUrl = (hasMapImage && typeof mapImage === 'object' && mapImage.asset)
  ? urlFor(mapImage).width(1200).height(400).url()
  : (typeof mapImage === 'string' ? mapImage : null);

// Use map image for OG sharing if available
const validOgImage = seoData.shareImage || mapImageUrl || companySettings?.logo;

// Helper to map Sanity day codes to Schema.org valid values
const mapSchemaDays = (dayCode: string) => {
  const map: Record<string, string | string[]> = {
    'Mo-Fr': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    'Mo-Fri': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'], // Handle potential legacy typo
    'Mo-Sa': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
    'Mo-Su': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
    'Sa': 'Saturday',
    'Su': 'Sunday',
    'PH': 'PublicHolidays'
  };
  return map[dayCode] || dayCode;
};

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact Us",
  "description": seoData.metaDescription,
  "url": Astro.url.href,
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": businessName,
    "image": validOgImage,
    "telephone": phone,
    "email": email,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": address?.streetAddress,
      "addressLocality": address?.addressLocality,
      "addressRegion": address?.addressRegion,
      "postalCode": address?.postalCode,
      "addressCountry": "ZA"
    },
    // Add map property if we have a real map link (fallback to geo)
    "hasMap": companySettings?.sameAs?.find((p: any) => p.platform === 'Google Maps')?.url || `https://maps.google.com/?q=${companySettings?.geo?.latitude},${companySettings?.geo?.longitude}`,
    "openingHoursSpecification": hours.map((h: any) => ({
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": mapSchemaDays(h.days),
      "opens": h.opens,
      "closes": h.closes
    })),
    "aggregateRating": companySettings?.aggregateRating ? {
      "@type": "AggregateRating",
      "ratingValue": companySettings.aggregateRating.ratingValue,
      "reviewCount": companySettings.aggregateRating.reviewCount,
      "bestRating": companySettings.aggregateRating.bestRating || 5
    } : undefined,
    "review": (companySettings?.testimonials?.reviews?.length > 0 ? companySettings.testimonials.reviews : (homepage?.testimonials?.reviews || [])).map((review: any) => ({
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": review.customerName
      },
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": review.rating,
        "bestRating": 5
      },
      "reviewBody": review.reviewText
    }))
  }
};
---

<Layout 
  seo={seoData}
  schemaMarkup={schemaMarkup}
>
  <!-- Hero Section -->
  <section 
    class="page-hero" 
    style={mapImageUrl ? `background-image: linear-gradient(rgba(29, 95, 32, 0.15), rgba(29, 95, 32, 0.1)), url('${mapImageUrl}');` : ''}
    aria-label="Contact page header with service area map background"
  >
    <div class="container hero-content">
      <h1>Contact Us</h1>
      <p class="hero-sub">Fast, Effective Pest Control Solutions</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="main-content">
    <div class="container">
      <div class="layout-grid">
        
        <!-- Contact Details Column -->
        <div class="details-column">
          <div class="info-card">
            <h3>Get In Touch</h3>
            <p class="info-text">We are ready to assist you with any pest control needs.</p>
            
            <div class="contact-links">
              <a href={`tel:${phone.replace(/\s+/g, '')}`} class="contact-item">
                <div class="icon-box">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <span class="label">Phone</span>
                  <span class="value">{phone}</span>
                </div>
              </a>

              <a href={`mailto:${email}`} class="contact-item">
                <div class="icon-box">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <span class="label">Email</span>
                  <span class="value">{email}</span>
                </div>
              </a>
            </div>
          </div>

          {address && (
            <div class="info-card">
              <h3>Visit Us</h3>
              <div class="contact-item">
                <div class="icon-box">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <span class="label">Location</span>
                  <address class="value address">
                    {address.streetAddress}<br />
                    {address.addressLocality}, {address.addressRegion}<br />
                    {address.postalCode}
                  </address>
                </div>
              </div>
            </div>
          )}

          {hours.length > 0 && (
            <div class="info-card">
              <h3>Business Hours</h3>
              <div class="hours-list">
                {hours.map((h: any) => (
                  <div class="hour-row">
                    <span class="day">{h.days}</span>
                    <span class="time">{h.opens} - {h.closes}</span>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Form Column -->
        <div class="form-column">
          <div class="form-card">
            <LeadForm 
              title="Send Us A Message" 
              description="Fill out the form below and our team will get back to you shortly."
              source="contact-page"
            />
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Google Reviews Section -->
  <Testimonials 
    title={companySettings?.testimonials?.title || homepage?.testimonials?.title || "What Our Customers Say"} 
    reviews={companySettings?.testimonials?.reviews?.length > 0 ? companySettings.testimonials.reviews : (homepage?.testimonials?.reviews || [])} 
  />

  {whatsapp && <WhatsAppWidget phoneNumber={whatsapp} />}
  <Footer />
</Layout>

<style>
  .page-hero {
    background-color: #1f2937;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    color: white;
    padding: 6rem 0;
    text-align: center;
    position: relative;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.6); /* Strong shadow for legibility */
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 800;
    margin-bottom: 1rem;
    text-shadow: 0 4px 12px rgba(0, 0, 0, 0.8);
  }

  .hero-sub {
    font-size: 1.25rem;
    color: #ffffff;
    max-width: 600px;
    margin: 0 auto;
    font-weight: 600;
    text-shadow: 0 2px 8px rgba(0, 0, 0, 0.8);
  }

  .main-content {
    padding: 4rem 0;
    background: #f3f4f6;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .layout-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: 3rem;
    align-items: start;
  }

  @media (max-width: 968px) {
    .layout-grid {
      grid-template-columns: 1fr;
    }
  }

  .details-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-card {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
  }

  .info-card h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #1f2937;
    margin-bottom: 1.5rem;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid #f3f4f6;
  }

  .info-text {
    color: #6b7280;
    margin-bottom: 1.5rem;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .contact-item:hover .icon-box {
    background: #1d5f20;
    color: white;
  }

  .icon-box {
    width: 48px;
    height: 48px;
    background: #eef2ff;
    color: #1d5f20;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.2s;
  }

  .icon {
    width: 24px;
    height: 24px;
  }

  .label {
    display: block;
    font-size: 0.875rem;
    color: #9ca3af;
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .value {
    display: block;
    font-size: 1.125rem;
    color: #1f2937;
    font-weight: 500;
  }

  .address {
    font-style: normal;
    line-height: 1.6;
  }

  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .hour-row {
    display: flex;
    justify-content: space-between;
    padding-bottom: 0.5rem;
    border-bottom: 1px dashed #e5e7eb;
  }

  .hour-row:last-child {
    border-bottom: none;
  }

  .day {
    font-weight: 600;
    color: #374151;
  }

  .time {
    color: #6b7280;
  }

  .form-card {
    background: white;
    border-radius: 16px;
    overflow: hidden;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }

  /* Override generic lead form styles for this context if needed */
  :global(.form-card .lead-form-section) {
    padding: 0 !important;
    background: white !important;
  }

  :global(.form-card .container) {
    padding: 2rem !important;
    max-width: 100% !important;
  }

  :global(.form-card h2) {
    color: #1f2937 !important;
  }
  
  :global(.form-card .description) {
    color: #6b7280 !important;
  }

  :global(.form-card label) {
    color: #374151 !important;
  }

  :global(.form-card input),
  :global(.form-card select),
  :global(.form-card textarea) {
    background: #f9fafb !important;
    color: #1f2937 !important;
    border: 1px solid #e5e7eb !important;
  }

  :global(.form-card input:focus),
  :global(.form-card select:focus),
  :global(.form-card textarea:focus) {
    border-color: #1d5f20 !important;
    background: white !important;
    box-shadow: 0 0 0 3px rgba(29, 95, 32, 0.1) !important;
  }

  :global(.form-card .submit-btn) {
    background: #1d5f20 !important;
    color: white !important;
    border: none !important;
  }

  :global(.form-card .submit-btn:hover) {
    background: #164a18 !important;
    transform: translateY(-2px);
  }
</style>
