---
// src/pages/contact.astro
import Layout from '../layouts/Layout.astro';
import LeadFormCompact from '../components/LeadFormCompact.astro';
import Footer from '../components/Footer.astro';
import WhatsAppWidget from '../components/WhatsAppWidget.astro';
import Testimonials from '../components/Testimonials.astro';
import { fetchCompanySettings, fetchHomepage, fetchContactPage, urlFor } from '../lib/sanity-client';

// Fetch data
const [companySettings, homepage, contactData] = await Promise.all([
  fetchCompanySettings(),
  fetchHomepage(),
  fetchContactPage()
]);

// Fallback data
const businessName = companySettings?.businessName || "Pest Experts";
const phone = companySettings?.contactInfo?.telephone || "+27 12 345 6789";
const email = companySettings?.contactInfo?.email || "info@pestexperts.co.za";
const address = companySettings?.address;
const hours = companySettings?.businessHours || [];
const whatsapp = companySettings?.contactInfo?.whatsapp;

// SEO & Schema from Sanity
const seoData = contactData?.seo || {
  metaTitle: `Contact Us | ${businessName}`,
  metaDescription: "Get in touch with Pest Experts for fast, reliable pest control services across Gauteng. Call us or request a free quote online."
};

// Map Image from Homepage
const mapImage = homepage?.serviceAreas?.mapImage;

// Check if mapImage is valid (supporting Sanity object or string)
const hasMapImage = mapImage && (
  (typeof mapImage === 'string' && mapImage.length > 0) ||
  (typeof mapImage === 'object' && mapImage.asset)
);

// Optimize image URL if it's a Sanity object
const mapImageUrl = (hasMapImage && typeof mapImage === 'object' && mapImage.asset)
  ? urlFor(mapImage).width(1200).height(400).url()
  : (typeof mapImage === 'string' ? mapImage : null);

// Use map image for OG sharing if available
const validOgImage = seoData.shareImage || mapImageUrl || companySettings?.logo;

// Helper to map Sanity day codes to Schema.org valid values
const mapSchemaDays = (dayCode: string) => {
  const map: Record<string, string | string[]> = {
    'Mo-Fr': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'],
    'Mo-Fri': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday'], // Handle potential legacy typo
    'Mo-Sa': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'],
    'Mo-Su': ['Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday', 'Sunday'],
    'Sa': 'Saturday',
    'Su': 'Sunday',
    'PH': 'PublicHolidays'
  };
  return map[dayCode] || dayCode;
};

const schemaMarkup = {
  "@context": "https://schema.org",
  "@type": "ContactPage",
  "name": "Contact Us",
  "description": seoData.metaDescription,
  "url": Astro.url.href,
  "mainEntity": {
    "@type": "LocalBusiness",
    "name": businessName,
    "image": validOgImage,
    "telephone": phone,
    "email": email,
    "address": {
      "@type": "PostalAddress",
      "streetAddress": address?.streetAddress,
      "addressLocality": address?.addressLocality,
      "addressRegion": address?.addressRegion,
      "postalCode": address?.postalCode,
      "addressCountry": "ZA"
    },
    // Add map property if we have a real map link (fallback to geo)
    "hasMap": companySettings?.sameAs?.find((p: any) => p.platform === 'Google Maps')?.url || `https://maps.google.com/?q=${companySettings?.geo?.latitude},${companySettings?.geo?.longitude}`,
    "openingHoursSpecification": hours.map((h: any) => ({
      "@type": "OpeningHoursSpecification",
      "dayOfWeek": mapSchemaDays(h.days),
      "opens": h.opens,
      "closes": h.closes
    })),
    "aggregateRating": companySettings?.aggregateRating ? {
      "@type": "AggregateRating",
      "ratingValue": companySettings.aggregateRating.ratingValue,
      "reviewCount": companySettings.aggregateRating.reviewCount,
      "bestRating": companySettings.aggregateRating.bestRating || 5
    } : undefined,
    "review": (companySettings?.testimonials?.reviews?.length > 0 ? companySettings.testimonials.reviews : (homepage?.testimonials?.reviews || [])).map((review: any) => ({
      "@type": "Review",
      "author": {
        "@type": "Person",
        "name": review.customerName
      },
      "reviewRating": {
        "@type": "Rating",
        "ratingValue": review.rating,
        "bestRating": 5
      },
      "reviewBody": review.reviewText
    }))
  }
};
---

<Layout 
  seo={seoData}
  schemaMarkup={schemaMarkup}
>
  <!-- Hero Section -->
  <section class="page-hero" aria-label="Contact page header">
    <!-- Premium opaque gradient background without the map image -->
    <div class="hero-overlay bg-gradient-to-br from-[#1a4f1d] via-[#1d5f20] to-[#2d7a30]"></div>
    
    <!-- Subtle background pattern for depth -->
    <div class="absolute inset-0 opacity-[0.05] bg-[url('data:image/svg+xml;base64,PHN2ZyB3aWR0aD0iNDAiIGhlaWdodD0iNDAiIHhtbG5zPSJodHRwOi8vd3d3LnczLm9yZy8yMDAwL3N2ZyI+CjxwYXRoIGQ9Ik0wIDBoNDB2NDBIMHoiIGZpbGw9Im5vbmUiLz4KPHBhdGggZD0iTTIwIDIwTDIwLjAxLDIwWiIgc3Ryb2tlPSIjZmZmIiBzdHJva2Utd2lkdGg9IjIiIG9wYWNpdHk9IjAuNSIvPgo8L3N2Zz4=')] mix-blend-overlay pointer-events-none"></div>

    <div class="container hero-content relative z-10 pt-16 pb-12">
      <div class="inline-flex items-center gap-2 px-4 py-1.5 rounded-full bg-white/10 backdrop-blur-md border border-white/20 text-sm font-semibold text-white mb-6 shadow-sm mx-auto animate-fade-in-up">
        <span class="flex items-center justify-center w-5 h-5 rounded-full bg-[#4ade80] shadow-sm text-xs text-green-900">ðŸ’¬</span> 
        <span class="tracking-wide uppercase text-xs">Always Here To Help</span>
      </div>
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-extrabold mb-4 tracking-tight leading-tight animate-fade-in-up text-white" style="animation-delay: 100ms;">Contact Us</h1>
      <p class="hero-sub text-lg md:text-xl lg:text-2xl font-light text-green-50 max-w-2xl mx-auto animate-fade-in-up" style="animation-delay: 200ms;">Reach out today for fast, effective pest control solutions across Gauteng.</p>
    </div>
  </section>

  <!-- Main Content -->
  <section class="main-content relative overflow-hidden">
    <!-- Decorative abstract shapes in the background -->
    <div class="absolute top-0 right-0 w-1/3 h-[600px] bg-green-50/50 transform -skew-x-12 translate-x-32 hidden lg:block -z-10 rounded-bl-[100px]"></div>
    <div class="absolute -bottom-40 -left-40 w-96 h-96 rounded-full opacity-40 -z-10 pointer-events-none blur-3xl" style="background: radial-gradient(circle, rgba(220,252,231,0.8) 0%, rgba(220,252,231,0) 70%);"></div>

    <div class="container relative z-10 pt-8 mt-4">
      <div class="layout-grid">
        
        <!-- Contact Details Column -->
        <div class="details-column lg:mt-10">
          <div class="info-card premium-shadow group">
            <h2 class="flex items-center gap-3 text-xl font-bold">
              <span class="w-2 h-8 bg-green-600 rounded-full inline-block"></span>
              Get In Touch
            </h2>
            <p class="info-text">We are ready to assist you with any pest control needs.</p>
            
            <div class="contact-links">
              <a href={`tel:${phone.replace(/\s+/g, '')}`} class="contact-item group/item" data-gtm="click_to_call" onclick="window.dataLayer && window.dataLayer.push({event:'click_to_call'})">
                <div class="icon-box bg-gradient-to-br from-green-50 to-green-100 group-hover/item:from-green-600 group-hover/item:to-green-700 shadow-sm border border-green-100 group-hover/item:border-transparent">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon text-green-700 group-hover/item:text-white transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                  </svg>
                </div>
                <div>
                  <span class="label">Phone</span>
                  <span class="value text-gray-900 group-hover/item:text-green-700 transition-colors">{phone}</span>
                </div>
              </a>

              <a href={`mailto:${email}`} class="contact-item group/item">
                <div class="icon-box bg-gradient-to-br from-blue-50 to-blue-100 group-hover/item:from-blue-600 group-hover/item:to-blue-700 shadow-sm border border-blue-100 group-hover/item:border-transparent">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon text-blue-700 group-hover/item:text-white transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                  </svg>
                </div>
                <div>
                  <span class="label">Email</span>
                  <span class="value text-gray-900 group-hover/item:text-blue-700 transition-colors">{email}</span>
                </div>
              </a>
            </div>
          </div>

          {address && (
            <div class="info-card premium-shadow group">
              <h2 class="flex items-center gap-3 text-xl font-bold">
                <span class="w-2 h-8 bg-amber-500 rounded-full inline-block"></span>
                Visit Us
              </h2>
              <div class="contact-item">
                <div class="icon-box bg-gradient-to-br from-amber-50 to-amber-100 border border-amber-100 group-hover:from-amber-500 group-hover:to-amber-600 transition-all duration-300">
                  <svg xmlns="http://www.w3.org/2000/svg" class="icon text-amber-600 group-hover:text-white transition-colors duration-300" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                  </svg>
                </div>
                <div>
                  <span class="label">Location</span>
                  <address class="value address text-gray-800">
                    {address.streetAddress}<br />
                    {address.addressLocality}, {address.addressRegion}<br />
                    {address.postalCode}
                  </address>
                </div>
              </div>
            </div>
          )}

          {hours.length > 0 && (
            <div class="info-card premium-shadow">
              <h2 class="flex items-center gap-3 text-xl font-bold">
                <span class="w-2 h-8 bg-purple-600 rounded-full inline-block"></span>
                Business Hours
              </h2>
              <div class="hours-list">
                {hours.map((h: any) => (
                  <div class="hour-row group/row">
                    <span class="day text-gray-800 group-hover/row:text-purple-700 font-bold transition-colors">{h.days}</span>
                    <span class="time font-medium py-1 px-3 bg-gray-50 rounded-md text-gray-700">{h.opens} - {h.closes}</span>
                  </div>
                ))}
              </div>
            </div>
          )}
        </div>

        <!-- Form Column -->
        <div class="form-column">
          <div class="relative">
            <!-- Decorative border glow behind form -->
            <div class="absolute -inset-1 bg-gradient-to-r from-green-600 to-green-400 rounded-[24px] blur opacity-20 group-hover:opacity-30 transition duration-1000 group-hover:duration-200"></div>
            
            <div class="form-card relative bg-white rounded-[20px] p-2 md:p-3 premium-shadow overflow-hidden border border-white/50 backdrop-blur-xl">
              <!-- Trust badge corner ribbon -->
              <div class="absolute -right-12 top-6 bg-amber-500 text-white font-bold text-xs py-1 px-12 rotate-45 shadow-sm hidden sm:block">
                FAST RESPONSE
              </div>
              
              <LeadFormCompact 
                title="Send Us A Message" 
                description="Fill out the form below and our team will get back to you shortly."
                source="contact_page"
                formId="contactForm"
                variant="card"
                headingLevel="h2"
              />
              
              <div class="mt-4 pb-2 flex items-center justify-center gap-6 text-xs text-gray-500 font-medium">
                <div class="flex items-center gap-1.5">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path></svg>
                  Secure Form
                </div>
                <div class="flex items-center gap-1.5">
                  <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path></svg>
                  Quote in 1 Hour
                </div>
              </div>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>

  <!-- Google Reviews Section -->
  <Testimonials 
    title={companySettings?.testimonials?.title || homepage?.testimonials?.title || "What Our Customers Say"} 
    reviews={companySettings?.testimonials?.reviews?.length > 0 ? companySettings.testimonials.reviews : (homepage?.testimonials?.reviews || [])} 
    googleReviews={companySettings?.googleReviews}
  />

  {whatsapp && <WhatsAppWidget phoneNumber={whatsapp} />}
  <Footer companyData={companySettings} />
</Layout>

<style>
  .page-hero {
    position: relative;
    background-color: #172554; /* Deep modern blue fallback */
    color: white;
    padding: 8rem 0 6rem 0; /* Reduced bottom padding since we removed the severe negative margin overlap */
    text-align: center;
    overflow: hidden;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    /* Gradient handled by tailwind classes */
    z-index: 1;
  }

  /* Tailwind CSS override to clean up redundant custom CSS */
  .hero-content {
    h1 {
      text-shadow: 0 4px 12px rgba(0, 0, 0, 0.4);
    }
  }

  .main-content {
    padding: 0 0 6rem 0;
    background: #f8fafc; /* Sleeker cool gray instead of warm gray */
  }

  /* Animations */
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards;
    opacity: 0;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .layout-grid {
    display: grid;
    grid-template-columns: 1fr 1.3fr;
    gap: 3.5rem;
    align-items: start;
  }

  @media (max-width: 968px) {
    .layout-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
    
    .page-hero {
      padding: 6rem 0 8rem 0;
    }
    
    .details-column {
      margin-top: 2rem !important; /* Reset negative margin on mobile */
    }
  }

  .details-column {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .info-card {
    background: white;
    padding: 2.25rem;
    border-radius: 20px;
    border: 1px solid rgba(229, 231, 235, 0.5);
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1), box-shadow 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .premium-shadow {
    box-shadow: 0 10px 40px -10px rgba(0, 0, 0, 0.08), 0 1px 3px rgba(0, 0, 0, 0.05);
  }

  .info-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 20px 40px -10px rgba(0, 0, 0, 0.12), 0 1px 3px rgba(0, 0, 0, 0.05);
  }

  .info-card h3 {
    font-size: 1.35rem;
    font-weight: 800;
    color: #111827;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid #f3f4f6;
  }

  .info-text {
    color: #4b5563;
    margin-bottom: 1.75rem;
    font-size: 1.05rem;
    line-height: 1.6;
  }

  .contact-links {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 1.25rem;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .contact-item:hover {
    transform: translateX(6px);
  }

  .icon-box {
    width: 54px;
    height: 54px;
    border-radius: 14px;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .icon {
    width: 26px;
    height: 26px;
  }

  .label {
    display: block;
    font-size: 0.85rem;
    color: #6b7280;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 0.15rem;
  }

  .value {
    display: block;
    font-size: 1.15rem;
    font-weight: 600;
  }

  .address {
    font-style: normal;
    line-height: 1.7;
    font-size: 1.05rem;
  }

  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .hour-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0.875rem 0.5rem;
    border-bottom: 1px solid #f3f4f6;
    transition: background-color 0.2s;
    border-radius: 8px;
  }

  .hour-row:hover {
    background-color: #f9fafb;
  }

  .hour-row:last-child {
    border-bottom: none;
  }

  .day {
    font-weight: 600;
    letter-spacing: -0.01em;
  }

</style>

