// Test script to explore Sanity content
import { fetchAllDocumentTypes, fetchDocumentsByType, fetchServices } from '../lib/sanity-client';

console.log('üîç Exploring Sanity Content...\n');

try {
  // Get all document types
  console.log('üìã Fetching all document types...');
  const types = await fetchAllDocumentTypes();
  
  if (types && types.length > 0) {
    console.log(`‚úÖ Found ${types.length} document type(s):\n`);
    types.forEach((type: string) => {
      console.log(`  - ${type}`);
    });
    
    // Fetch documents for each type
    console.log('\nüìÑ Fetching documents for each type...\n');
    for (const type of types) {
      const docs = await fetchDocumentsByType(type);
      console.log(`  ${type}: ${docs.length} document(s)`);
      if (docs.length > 0 && docs.length <= 3) {
        docs.forEach((doc: any) => {
          console.log(`    - ${doc.title || doc.name || doc._id}`);
        });
      }
    }
  } else {
    console.log('‚ö†Ô∏è  No document types found');
  }
  
  // Try to fetch services specifically
  console.log('\nüîç Checking for services...');
  const services = await fetchServices();
  if (services.length > 0) {
    console.log(`‚úÖ Found ${services.length} service(s):`);
    services.forEach((service: any) => {
      console.log(`  - ${service.title} (${service.slug})`);
    });
  } else {
    console.log('‚ÑπÔ∏è  No services found. You may need to create service documents in Sanity Studio.');
  }
  
  console.log('\n‚úÖ Sanity connection test complete!');
  
} catch (error) {
  console.error('‚ùå Error:', error);
}
