---
// src/components/Footer.astro
// Footer din√°mico con datos de Sanity CMS
import { fetchCompanySettings, fetchServices, fetchServiceAreas } from '../lib/sanity-client';

interface Props {
  showBreadcrumbs?: boolean;
  breadcrumbs?: Array<{ label: string; href: string }>;
}

const { showBreadcrumbs = false, breadcrumbs = [] } = Astro.props;

// Obtener datos din√°micos de Sanity
const companySettings = await fetchCompanySettings();
const services = await fetchServices();
const serviceAreas = await fetchServiceAreas();

const currentYear = new Date().getFullYear();

// Datos con fallback por si Sanity est√° vac√≠o
const businessName = companySettings?.businessName || "Pest Control Experts";
const phone = companySettings?.contactInfo?.telephone || "+27 12 345 6789";
const email = companySettings?.contactInfo?.email || "info@pestexperts.co.za";
const businessHours = companySettings?.businessHours || [
  { days: "Monday - Friday", opens: "08:00", closes: "17:00" },
  { days: "Saturday", opens: "08:00", closes: "13:00" },
  { days: "Sunday", opens: "Closed", closes: "" },
];

// Tomar los primeros 4 servicios destacados para Quick Links
const featuredServices = services
  .filter((s: any) => s.featured)
  .slice(0, 4);

// Si no hay suficientes destacados, rellenar con los primeros disponibles
const quickLinkServices = featuredServices.length >= 4
  ? featuredServices
  : [...featuredServices, ...services.filter((s: any) => !s.featured)].slice(0, 4);

// Primeras √°reas de servicio para el footer
const footerAreas = serviceAreas.slice(0, 6);
---

<footer class="footer">
  {showBreadcrumbs && breadcrumbs.length > 0 && (
    <div class="breadcrumbs-section">
      <div class="container">
        <nav aria-label="Breadcrumb" class="breadcrumbs">
          <ol>
            <li><a href="/">Home</a></li>
            {breadcrumbs.map((crumb, index) => (
              <li>
                <span class="separator">‚Ä∫</span>
                {index === breadcrumbs.length - 1 ? (
                  <span aria-current="page">{crumb.label}</span>
                ) : (
                  <a href={crumb.href}>{crumb.label}</a>
                )}
              </li>
            ))}
          </ol>
        </nav>
      </div>
    </div>
  )}

  <div class="footer-main">
    <div class="container">
      <div class="footer-grid">
        <!-- Informaci√≥n de la empresa -->
        <div class="footer-column">
          <p class="footer-title">{businessName}</p>
          <p class="footer-description">
            Professional pest control services across Gauteng Province. Fast, local, and effective solutions.
          </p>
          <div class="contact-info">
            <a href={`tel:${phone.replace(/\s+/g, '')}`} class="contact-link">
              üìû {phone}
            </a>
            <a href={`mailto:${email}`} class="contact-link">
              ‚úâÔ∏è {email}
            </a>
          </div>
        </div>

        <!-- Quick Links din√°micos desde Sanity -->
        <div class="footer-column">
          <p class="footer-heading">Quick Links</p>
          <ul class="footer-links">
            <li><a href="/">Home</a></li>
            {quickLinkServices.map((service: any) => (
              <li>
                <a href={`/services/${service.slug}/`}>{service.title}</a>
              </li>
            ))}
            <li><a href="/contact">Contact</a></li>
          </ul>
        </div>

        <!-- Service Areas din√°micas desde Sanity -->
        <div class="footer-column">
          <p class="footer-heading">Service Areas</p>
          <ul class="footer-links">
            {footerAreas.length > 0 ? (
              footerAreas.map((area: any) => (
                <li>
                  <a href={`/service-areas/${area.slug}/`}>{area.title}</a>
                </li>
              ))
            ) : (
              /* Fallback est√°tico si no hay datos */
              <>
                <li><a href="#">Johannesburg</a></li>
                <li><a href="#">Pretoria</a></li>
                <li><a href="#">Sandton</a></li>
                <li><a href="#">Centurion</a></li>
              </>
            )}
          </ul>
        </div>

        <!-- Horarios de negocio din√°micos -->
        <div class="footer-column">
          <p class="footer-heading">Business Hours</p>
          <ul class="footer-links no-hover">
            {businessHours.map((hours: any) => (
              <li>
                {hours.days}: {hours.closes
                  ? `${hours.opens} - ${hours.closes}`
                  : hours.opens}
              </li>
            ))}
            <li class="emergency">24/7 Emergency Service</li>
          </ul>
        </div>
      </div>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container">
      <div class="footer-bottom-content">
        <p>&copy; {currentYear} {businessName}. All rights reserved.</p>
        <div class="footer-bottom-links">
          <a href="/privacy-policy">Privacy Policy</a>
          <span class="separator">|</span>
          <a href="/terms-of-service">Terms of Service</a>
        </div>
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: #1d5f20;
    color: white;
    margin-top: auto;
  }

  .breadcrumbs-section {
    background: rgba(0, 0, 0, 0.1);
    padding: 1rem 0;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .breadcrumbs ol {
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    gap: 0.5rem;
    list-style: none;
    font-size: 0.875rem;
  }

  .breadcrumbs a {
    color: white;
    text-decoration: none;
    transition: color 0.2s;
  }

  .breadcrumbs a:hover {
    color: white;
    text-decoration: underline;
  }

  .breadcrumbs .separator {
    color: rgba(255, 255, 255, 0.5);
    margin: 0 0.25rem;
  }

  .breadcrumbs [aria-current="page"] {
    color: white;
    font-weight: 600;
  }

  .footer-main {
    padding: 3rem 0 2rem;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .footer-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-column {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .footer-title {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    color: white;
  }

  .footer-description {
    color: white;
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
    margin-top: 0.5rem;
  }

  .contact-link {
    color: white;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    display: inline-block;
  }

  .contact-link:hover {
    transform: translateX(4px);
    opacity: 0.9;
  }

  .footer-heading {
    font-size: 1.125rem;
    font-weight: 600;
    margin-bottom: 0.5rem;
    color: white;
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-links li {
    color: white;
    font-size: 0.95rem;
  }

  .footer-links a {
    color: white;
    text-decoration: none;
    transition: all 0.2s;
    display: inline-block;
  }

  .footer-links:not(.no-hover) a:hover {
    color: white;
    transform: translateX(4px);
  }

  .footer-links .emergency {
    color: #fbbf24;
    font-weight: 600;
    margin-top: 0.5rem;
  }

  .footer-bottom {
    background: rgba(0, 0, 0, 0.2);
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    font-size: 0.875rem;
  }

  .footer-bottom-links {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .footer-bottom-links a {
    color: white;
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-bottom-links a:hover {
    color: white;
    text-decoration: underline;
  }

  .footer-bottom-links .separator {
    color: rgba(255, 255, 255, 0.5);
  }

  @media (max-width: 768px) {
    .footer-main {
      padding: 2rem 0 1.5rem;
    }

    .footer-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .breadcrumbs ol {
      font-size: 0.8125rem;
    }
  }
</style>
