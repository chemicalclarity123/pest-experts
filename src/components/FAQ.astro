---
// src/components/FAQ.astro
// FAQ section with accordion functionality and schema markup
interface Question {
  question: string;
  answer: string;
}

interface Props {
  title?: string;
  questions?: Question[];
}

const { 
  title = "Frequently Asked Questions",
  questions = []
} = Astro.props;
---

<section class="faq-section">
  <div class="container">
    <h2 class="section-title">{title}</h2>
    
    <div class="faq-grid">
      {questions.map((item, index) => (
        <details class="faq-item">
          <summary class="faq-question">
            <span class="question-text">{item.question}</span>
            <svg class="chevron" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <polyline points="6 9 12 15 18 9"></polyline>
            </svg>
          </summary>
          <div class="faq-answer">
            <p>{item.answer}</p>
          </div>
        </details>
      ))}
    </div>
  </div>
</section>

<style>
  .faq-section {
    padding: 4rem 0;
    background: linear-gradient(180deg, #f9fafb 0%, white 100%);
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    background: linear-gradient(135deg, #1d5f20 0%, #2d7a30 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-align: center;
    margin-bottom: 3rem;
  }

  .faq-grid {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .faq-item {
    background: white;
    border-radius: 12px;
    border: 1px solid #e5e7eb;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .faq-item:hover {
    border-color: #1d5f20;
    box-shadow: 0 4px 12px rgba(29, 95, 32, 0.1);
  }

  .faq-item[open] {
    border-color: #1d5f20;
    box-shadow: 0 8px 24px rgba(29, 95, 32, 0.15);
  }

  .faq-question {
    padding: 1.5rem;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    list-style: none;
    user-select: none;
    transition: all 0.3s ease;
  }

  .faq-question::-webkit-details-marker {
    display: none;
  }

  .faq-question:hover {
    background: rgba(29, 95, 32, 0.05);
  }

  .question-text {
    font-size: 1.125rem;
    font-weight: 600;
    color: #1f2937;
    flex: 1;
  }

  .chevron {
    flex-shrink: 0;
    color: #1d5f20;
    transition: transform 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }

  .faq-item[open] .chevron {
    transform: rotate(180deg);
  }

  .faq-answer {
    padding: 0 1.5rem 1.5rem;
    animation: slideDown 0.3s ease-out;
  }

  .faq-answer p {
    color: #6b7280;
    line-height: 1.7;
    margin: 0;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @media (max-width: 768px) {
    .section-title {
      font-size: 2rem;
    }

    .faq-question {
      padding: 1.25rem;
    }

    .question-text {
      font-size: 1rem;
    }

    .faq-answer {
      padding: 0 1.25rem 1.25rem;
    }
  }
</style>
