---
// src/components/LeadFormCompact.astro
// Compact lead form variant for hero sections
interface Props {
  title?: string;
  description?: string;
  serviceTitle?: string;
  source?: string;
}

const { 
  title = "Get A Free Quote",
  description = "Fill out the form and we'll contact you within 1 hour",
  serviceTitle = "",
  source = "general"
} = Astro.props;
---

<div class="compact-form-wrapper">
  <div class="form-header">
    <h3>{title}</h3>
    {description && <p class="form-description">{description}</p>}
  </div>
  
  <form class="compact-lead-form" id="compactLeadForm">
    <input type="hidden" name="source" value={source} />
    <div class="form-group">
      <label for="fullName" class="sr-only">Full Name</label>
      <input 
        type="text" 
        id="fullName" 
        name="fullName" 
        required 
        aria-required="true"
        placeholder="Full Name *"
      />
    </div>
    
    <div class="form-group">
      <label for="phone" class="sr-only">Phone Number</label>
      <input 
        type="tel" 
        id="phone" 
        name="phone" 
        required 
        aria-required="true"
        placeholder="Phone Number *"
      />
    </div>

    <div class="form-group">
      <label for="email" class="sr-only">Email</label>
      <input 
        type="email" 
        id="email" 
        name="email" 
        placeholder="Email"
      />
    </div>
    
    <div class="form-group">
      <label for="serviceNeeded" class="sr-only">Service Needed</label>
      <select id="serviceNeeded" name="serviceNeeded">
        {serviceTitle && <option value={serviceTitle} selected>{serviceTitle}</option>}
        <option value="">Select a service</option>
        <option value="pest-control">General Pest Control</option>
        <option value="termite-control">Termite Control</option>
        <option value="rodent-control">Rodent Control</option>
        <option value="termite-inspection">Termite Inspection</option>
        <option value="other">Other</option>
      </select>
    </div>

    <div class="form-group">
      <label for="message" class="sr-only">Message</label>
      <textarea 
        id="message" 
        name="message" 
        rows="2"
        placeholder="Message"
      ></textarea>
    </div>

    <button type="submit" class="submit-btn">
      Get Free Quote
    </button>

    <div id="compactFormMessage" class="form-message" style="display: none;"></div>
  </form>
</div>

<script>
  const form = document.getElementById('compactLeadForm') as HTMLFormElement;
  const messageDiv = document.getElementById('compactFormMessage') as HTMLDivElement;
  const submitBtn = form.querySelector('.submit-btn') as HTMLButtonElement;

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    
    submitBtn.disabled = true;
    submitBtn.textContent = 'Sending...';
    
    const formData = new FormData(form);
    const data = Object.fromEntries(formData.entries());
    
    try {
      const response = await fetch('/api/submit-lead', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(data),
      });
      
      const result = await response.json();
      
      if (response.ok) {
        messageDiv.textContent = result.message || 'Thank you! We\'ll contact you within 1 hour.';
        messageDiv.className = 'form-message success';
        messageDiv.style.display = 'block';
        form.reset();
      } else {
        messageDiv.textContent = result.error || 'Something went wrong. Please try again.';
        messageDiv.className = 'form-message error';
        messageDiv.style.display = 'block';
      }
    } catch (error) {
      messageDiv.textContent = 'Network error. Please try again.';
      messageDiv.className = 'form-message error';
      messageDiv.style.display = 'block';
    } finally {
      submitBtn.disabled = false;
      submitBtn.textContent = 'Get Free Quote';
      
      setTimeout(() => {
        messageDiv.style.display = 'none';
      }, 5000);
    }
  });
</script>

<style>
  .compact-form-wrapper {
    background: white;
    border-radius: 16px;
    padding: 1.25rem 1.5rem;
    box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
  }

  .form-header {
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .form-header h3 {
    font-size: 1.25rem;
    font-weight: 700;
    color: #2b6b2a;
    margin-bottom: 0.25rem;
  }

  .form-description {
    font-size: 0.875rem;
    color: #6b7280;
  }

  .compact-lead-form {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .form-group {
    display: flex;
    flex-direction: column;
  }

  /* Oculta visualmente las etiquetas pero las mantiene accesibles para screen readers y SEO */
  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border-width: 0;
  }

  label {
    font-weight: 600;
    color: #374151;
    font-size: 0.875rem;
  }

  input,
  select,
  textarea {
    width: 100%;
    padding: 0.5rem 0.75rem;
    border: 1.5px solid #e5e7eb;
    border-radius: 8px;
    font-size: 0.9rem;
    transition: all 0.2s;
    font-family: inherit;
    background: white;
    color: #1f2937;
  }

  input::placeholder,
  textarea::placeholder {
    color: #9ca3af;
  }

  select {
    cursor: pointer;
  }

  input:focus,
  select:focus,
  textarea:focus {
    outline: none;
    border-color: #2b6b2a;
    box-shadow: 0 0 0 3px rgba(43, 107, 42, 0.1);
  }

  textarea {
    resize: vertical;
    min-height: 56px;
  }

  .submit-btn {
    background: #2b6b2a;
    color: white;
    padding: 0.7rem 1.5rem;
    border: none;
    border-radius: 8px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    margin-top: 0.25rem;
    width: 100%;
  }

  .submit-btn:hover:not(:disabled) {
    background: #15803d;
    transform: translateY(-2px);
    box-shadow: 0 10px 25px -5px rgba(43, 107, 42, 0.3);
  }

  .submit-btn:disabled {
    opacity: 0.5;
    cursor: not-allowed;
  }

  .form-message {
    padding: 0.875rem;
    border-radius: 8px;
    text-align: center;
    font-weight: 500;
    font-size: 0.875rem;
  }

  .form-message.success {
    background: #dcfce7;
    color: #166534;
    border: 1px solid #86efac;
  }

  .form-message.error {
    background: #fee2e2;
    color: #991b1b;
    border: 1px solid #fca5a5;
  }

  /* Mobile optimization */
  @media (max-width: 640px) {
    .compact-form-wrapper {
      padding: 1.5rem;
    }

    .form-header h3 {
      font-size: 1.25rem;
    }

    input,
    select,
    textarea {
      font-size: 16px; /* Prevents zoom on focus in iOS */
    }
  }
</style>
