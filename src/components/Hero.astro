---
// src/components/Hero.astro
// Hero section with background image — usa LeadFormCompact como formulario
import { urlFor } from '../lib/sanity-client';
import LeadFormCompact from './LeadFormCompact.astro';

interface Props {
  headline: string;
  subheadline?: string;
  ctaText?: string;
  backgroundImage?: any;
  trustBadges?: string[];
}

const { 
  headline,
  subheadline,
  ctaText = "Get A Quote",
  backgroundImage,
  trustBadges = []
} = Astro.props;

// Verifica si la imagen de fondo es válida
const hasValidImage = backgroundImage && (
  (typeof backgroundImage === 'string' && backgroundImage.length > 0) ||
  (typeof backgroundImage === 'object' && backgroundImage.asset)
);

// Optimiza la URL de imagen si es un objeto de Sanity
const bgImageUrl = (hasValidImage && typeof backgroundImage === 'object' && backgroundImage.asset)
  ? urlFor(backgroundImage).width(1920).quality(80).auto('format').url()
  : backgroundImage; 
---

<section class="hero" class:list={[{ 'hero-no-image': !hasValidImage }]}>
  {hasValidImage && (
    <div class="hero-bg">
      <img 
        src={bgImageUrl} 
        alt="Pest control service" 
        width="1920"
        height="800"
        fetchpriority="high"
        decoding="async"
        class="hero-image"
      />
      <div class="hero-overlay"></div>
    </div>
  )}
  
  <div class="hero-content">
    <div class="container">
      <div class="hero-grid">
        <div class="hero-text">
          <h1>{headline}</h1>
          {subheadline && <p class="subheadline">{subheadline}</p>}
          
          {trustBadges.length > 0 && (
            <div class="trust-badges">
              {trustBadges.map((badge) => (
                <span class="badge">{badge}</span>
              ))}
            </div>
          )}
        </div>

        <!-- Formulario unificado — misma instancia que en el resto del sitio -->
        <LeadFormCompact 
          title="Get A Free Quote"
          description="We'll respond within 1 hour"
          source="homepage_hero"
          formId="heroForm"
          variant="card"
          headingLevel="h2"
        />
      </div>
    </div>
  </div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 600px;
    display: flex;
    align-items: center;
    padding: 4rem 0;
    overflow: hidden;
  }

  .hero-no-image {
    background: linear-gradient(135deg, #1f2937 0%, #1d5f20 100%);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .hero-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(135deg, rgba(0, 0, 0, 0.7) 0%, rgba(0, 0, 0, 0.4) 100%);
  }

  .hero-content {
    position: relative;
    z-index: 1;
    width: 100%;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .hero-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    align-items: center;
  }

  @media (max-width: 968px) {
    .hero-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }

  .hero-text h1 {
    font-size: 3rem;
    font-weight: 800;
    color: white;
    line-height: 1.1;
    margin-bottom: 1rem;
  }

  @media (max-width: 768px) {
    .hero-text h1 {
      font-size: 2rem;
    }
  }

  .subheadline {
    font-size: 1.25rem;
    color: white;
    margin-bottom: 1.5rem;
  }

  .trust-badges {
    display: flex;
    flex-wrap: wrap;
    gap: 0.75rem;
    margin-top: 1.5rem;
  }

  .badge {
    background: rgba(255, 255, 255, 0.2);
    backdrop-filter: blur(10px);
    color: white;
    padding: 0.5rem 1rem;
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
  }
</style>
